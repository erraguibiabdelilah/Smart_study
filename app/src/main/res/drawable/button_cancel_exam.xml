<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur du bouton -->
    <solid android:color="#6B0271"/>

    <!-- Coins arrondis -->
    <corners android:radius="30dp"/>

    <!-- Bordure -->
    <stroke
        android:width="2dp"
        android:color="#03A9F4"/>

    <!-- Padding interne -->
    <padding
        android:left="16dp"
        android:top="10dp"
        android:right="16dp"
        android:bottom="10dp"/>
</shape>
