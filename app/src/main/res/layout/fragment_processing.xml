<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp"
    android:layout_margin="20dp">

    <!-- Titre -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Processing Document"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Barre de progression -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/titleText"
        android:layout_marginTop="40dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progress_bar" />

    <!-- Pourcentage -->
    <TextView
        android:id="@+id/percentageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="0%"
        android:textColor="#5B6EF5"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Status text avec icÃ´ne -->
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentageText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sparkleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¨"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Generating flashcards from first section (3 total sections available)"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Container pour les 3 Ã©tapes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusLayout"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Ã‰tape 1: Upload -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:id="@+id/step1Circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_cercle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸ“¤"
                    android:textSize="28sp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Upload"
                android:textColor="#4CAF50"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Ã‰tape 2: Extract Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:id="@+id/step2Circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_cercle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ðŸ”"
                    android:textSize="28sp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Extract Text"
                android:textColor="#4CAF50"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Ã‰tape 3: Generate -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:id="@+id/step3Circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_cercle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="âœ¨"
                    android:textSize="28sp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Generate"
                android:textColor="#5B6EF5"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>