<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#F5F7FA">

    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GÃ©nÃ©rateur de QCM ðŸ“˜"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginBottom="20dp"/>

    <!-- Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="40dp"
        android:elevation="10dp"
        android:layout_marginBottom="20dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- IcÃ´ne Upload -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_upload"
            android:layout_marginBottom="20dp"
            app:tint="#3949AB" />

        <!-- Texte d'instruction -->
        <TextView
            android:id="@+id/fileNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Aucun fichier sÃ©lectionnÃ©"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <!-- Bouton Choisir Fichier -->
        <Button
            android:id="@+id/btn_upload_pdf"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“„ Choisir un PDF"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3949AB"
            android:textAllCaps="false"
            android:padding="12dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/uploadProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:progressTint="#3949AB"
            android:progressBackgroundTint="#E0E0E0"
            android:max="100"/>

        <!-- Message de statut -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En attente..."
            android:textColor="#4CAF50"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- Info format -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formats acceptÃ©s: .pdf"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="10dp"/>

</LinearLayout>
